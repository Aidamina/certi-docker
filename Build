FROM ubuntu:16.10
RUN apt-get update && apt-get install -y \
	build-essential \
	clang-3.8 \
        cmake \
        flex \
        bison \
	libxml2-dev \
	libx11-dev \ 
	xbitmaps \
	wget

ARG CERTI_VERSION=3.5.1
		
RUN wget http://download.savannah.gnu.org/releases/certi/CERTI-${CERTI_VERSION}-Source.tar.gz && \
	tar zxvf CERTI-${CERTI_VERSION}-Source.tar.gz
	
RUN mkdir build install

WORKDIR build

RUN cmake -DCMAKE_C_COMPILER=clang-3.8 -DCMAKE_CXX_COMPILER=clang++-3.8 -DCMAKE_INSTALL_PREFIX=/install /CERTI-${CERTI_VERSION}-Source

CMD make install
